{
  "openapi": "3.0.0",
  "info": {
    "title": "New SOS Documentation",
    "description": "This is an API New SOS",
    "version": "1.0.0",
    "contact": {
      "email": "evertonsdsilva@gmail.com"
    }
  },
  "paths": {
    "/v1/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a User",
        "description": "Create a new User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "cell_phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "document": {
                    "type": "string"
                  },
                  "birth_date": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Everton Oliveira",
                  "phone": "9132867766",
                  "cell_phone": "91981501208",
                  "email": "evertonsdsilva@gmail.com",
                  "document": "36425",
                  "birth_date": "1987-11-25",
                  "password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    },
    "/v1/users/auth": {
      "post": {
        "tags": ["Users"],
        "summary": "Session a User",
        "description": "Session a User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "document": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "document": "36425",
                  "password": "12345"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    },
    "/v1/distresscall": {
      "post": {
        "tags": ["Distress Call"],
        "summary": "Create Distress Call",
        "description": "Create Distress Call",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lat": {
                    "type": "number"
                  },
                  "lng": {
                    "type": "number"
                  },
                  "user_id": {
                    "type": "string"
                  }
                },
                "example": {
                  "lat": -1.484587367,
                  "lng": -48.473473,
                  "user_id": "wfbfwu9h428ewh924tjnwv"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}